<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.dalong.marqueeview.MarqueeView
        android:id="@+id/drag_tv_marquee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:direction="left"
        app:isRepeat="true"
        app:speed="50"
        app:startPoint="end"
        app:textSize="12sp"
        app:textcolor="#E72803" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jhqc.vr.travel.weight.CircleImageView
            android:id="@+id/drag_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_gravity="center"
            android:src="@drawable/drag"
            />

        <ImageView
            android:id="@+id/drag_center_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/drag_center"
            android:background="@drawable/drag_center"
             />

    </FrameLayout>

</LinearLayout>