<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/dialog_normal_bg"
        android:orientation="horizontal"
        android:id="@+id/window_rl"
        >

    <ProgressBar
            android:id="@+id/alert_ImageView_wait"
            android:layout_width="@dimen/waiting_width"
            android:layout_height="@dimen/waiting_height"
            android:indeterminateDrawable="@anim/loading_anim"
            >
    </ProgressBar>

    <TextView
            android:id="@+id/alert_textView_title"
            style="@style/widthfull"
            android:layout_marginLeft="5dip"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/dialog_nomal_content_text_size"
            >
    </TextView>
</LinearLayout>
