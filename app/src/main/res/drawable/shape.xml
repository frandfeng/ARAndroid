<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 实心 -->
    <solid android:color="#2b3a62"/>
    <!-- 渐变 -->
    <gradient
            android:startColor="#2b3a62"
            android:endColor="#2b3a62"
            android:angle="90"/>
    <!-- 描边 -->
    <stroke
            android:width="2dp"
            android:color="#ffffff"/>
    <!-- 圆角 -->
    <corners
            android:radius="0dp"/>
    <padding
            android:left="1dp"
            android:top="1dp"
            android:right="1dp"
            android:bottom="1dp"/>
</shape>
	